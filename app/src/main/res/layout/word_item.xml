<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/word_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="2dp"
    android:innerRadius="2dp"
    android:padding="8dp"
    android:thicknessRatio="1.9"
    app:cardCornerRadius="18dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/arabic_text"
                style="@style/WordItemTextView"
                android:text="@string/arabic" />

            <TextView
                android:id="@+id/pronunciation_text"
                style="@style/WordItemTextView"
                android:text="@string/pronunciation" />

            <TextView
                android:id="@+id/chinese_text"
                style="@style/WordItemTextView"
                android:text="@string/chineseWord" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <ImageView
                android:id="@+id/share_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:focusable="true"
                android:clickable="true"
                android:src="@drawable/ic_share_black_24dp" />

            <ImageView
                android:id="@+id/favor_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:focusable="true"
                android:clickable="true"
                android:src="@drawable/ic_heart_outline" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>